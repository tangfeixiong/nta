	url="https://github.com/madler/zlib" && \
	tgt="${BUILD_PATH}/zlib" && \
	ver=${ZLIB_VERSION} && \
	git clone --branch ${ver} --depth 1 ${url} ${tgt} && \
	cd ${tgt} && \
	tag=$(git describe --tags --abbrev=0) && \
	\
	# ./configure && 
	# make && 
    # make install && 
	# make clean && 
	\
	echo -e "$(basename ${tgt}) build completed \n \
		git source: ${url} \n \
		git tag: ${tag} \n \
		version: ${ver}"
	
